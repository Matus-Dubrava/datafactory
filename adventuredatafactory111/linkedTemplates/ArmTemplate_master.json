{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adventuredatafactory111"
		},
		"AdventureDatabase_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AdventureDatabase'"
		},
		"AdventureSynapseWarehouse_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AdventureSynapseWarehouse'"
		},
		"AdventureDataLake_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AdventureDataLake'"
		},
		"AdventureDataLake_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adventuredatalake1.dfs.core.windows.net"
		},
		"TriggerOnCreateBlobEvent_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/4cedc5dd-e3ad-468d-bf66-32e31bdb9148/resourceGroups/1-abf7d663-playground-sandbox/providers/Microsoft.Storage/storageAccounts/adventuredatalake1"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adventuredatafactory111_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AdventureDatabase_connectionString": {
						"value": "[parameters('AdventureDatabase_connectionString')]"
					},
					"AdventureSynapseWarehouse_connectionString": {
						"value": "[parameters('AdventureSynapseWarehouse_connectionString')]"
					},
					"AdventureDataLake_accountKey": {
						"value": "[parameters('AdventureDataLake_accountKey')]"
					},
					"AdventureDataLake_properties_typeProperties_url": {
						"value": "[parameters('AdventureDataLake_properties_typeProperties_url')]"
					},
					"TriggerOnCreateBlobEvent_properties_typeProperties_scope": {
						"value": "[parameters('TriggerOnCreateBlobEvent_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}